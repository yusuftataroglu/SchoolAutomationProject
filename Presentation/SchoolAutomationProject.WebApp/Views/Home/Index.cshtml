@{
    ViewData["Title"] = "Bilge Koleji";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-auto mx-auto text-center">
        <h1>Welcome to Bilge Koleji</h1>
        <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla consectetur tincidunt tortor, iniaculis neque
            tristique sed.
        </p>
    </div>
</div>

<!--Card header-->
<div class="card-header">
    <h3 class="card-title">Giriş Yap</h3>
</div>

<!--Card body-->
<div class="card-body">
    <div id="validationSummary" class="alert alert-danger" style="display:none">
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input id="username" class="form-control" type="text" placeholder="Kullanıcı adınızı giriniz">
    </div>

    <div class="form-group">
        <label>Şifre</label>
        <input id="password" class="form-control" type="password" placeholder="Şifrenizi giriniz">
    </div>
</div>

<!--Card footer-->
<div class="card-footer">
    <button id="loginButton" type="submit" class="btn btn-success">Giriş Yap</button>
</div>
