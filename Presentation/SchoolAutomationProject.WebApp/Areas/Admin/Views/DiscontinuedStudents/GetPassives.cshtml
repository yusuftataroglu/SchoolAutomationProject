@model List<ReadDiscontinuedStudentViewModel>

@{
    ViewData["Title"] = "GetPassives";
}

<div class="card mb-4">
    <div class="card-header d-flex align-items-center">
        <i class="fas fa-table me-1 me-2"></i>
        <h3>@ViewData["TableTitle"]</h3>
    </div>

    <div class="card-body">
        <table class="table table-hover table-bordered">

            <thead>
                <tr>
                    @foreach (var columnTitle in ViewData["CustomColumnTitles"] as List<string>)
                    {
                        <th>@columnTitle</th>
                    }
                    <!-- Ekleme butonu -->
                    <th>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @foreach (var customProperty in ViewData["CustomProperties"] as List<string>)
                        {
                            <td>@item.GetType().GetProperty(customProperty).GetValue(item)</td>
                        }
                        <!-- Detaylar, Güncelle, Sil butonları -->
                        <td class="d-flex">
                            <a class="btn btn-warning" asp-area="Admin" asp-controller="@ViewData["ControllerName"]" asp-action="DiscontinuedStudentDetails" asp-route-id="@item.Id">Detaylar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
