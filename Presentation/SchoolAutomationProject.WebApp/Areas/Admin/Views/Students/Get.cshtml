@model List<ReadStudentViewModel>
@{
    ViewData["Title"] = "Öğrenci Listesi";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex align-items-center">
        <i class="fas fa-table me-1 me-2"></i>
        <h3>Öğrenci Listesi</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Okul No</th>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Cinsiyet</th>
                    <th>Bitirdiği Okul</th>
                    <th>Mezuniyet Ortalaması</th>
                    <th>Ön Kayıt Durumu</th>
                    <th>Devamsızlık Sayısı</th>
                    <th>Devam Etme Durumu</th>
                    <th>Sınıf</th>
                    <th><a class="btn btn-success" asp-area="Admin" asp-controller="Students" asp-action="Add">+</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.RegistrationNumber</td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Gender</td>
                        <td>@student.GraduatedSchool</td>
                        <td>@student.GPA</td>
                        <td>@(student.IsPreRegistered ? "Ön Kayıtlı" : "Ön Kayıtlı Değil")</td>
                        <td>@student.TotalAbsenceCount</td>
                        <td>@student.ContinuationStatus</td>
                        <td>@student.Classroom?.Name</td>
                       
                        <td class="d-flex">
                            <a class="btn btn-warning" asp-area="Admin" asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">Detaylar</a>
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Students" asp-action="Update" asp-route-id="@student.Id">Güncelle</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
