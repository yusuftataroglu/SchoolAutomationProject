@model List<ReadTeacherScheduleViewModel>
@{
    ViewData["Title"] = "Öğretmen Programı";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex align-items-center">
        <i class="fas fa-table me-1 me-2"></i>
        <h3>Öğretmen Programı</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Gün</th>
                    <th>Zaman Aralığı</th>
                    <th>Sınıf</th>
                    <th>Öğretmen</th>
                    <th><a class="btn btn-success" asp-area="Admin" asp-controller="TeacherSchedules" asp-action="Add">+</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.DateTime.ToShortDateString()</td>
                        <td>@schedule.Day</td>
                        <td>@schedule.TimeSlot</td>
                        <td>@schedule.Classroom</td>
                        <td>@schedule.Teacher.FirstName @schedule.Teacher.LastName</td>
                        <td class="d-flex">
                            <a class="btn btn-warning" asp-area="Admin" asp-controller="TeacherSchedules" asp-action="Details" asp-route-id="@schedule.Id">Detaylar</a>
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="TeacherSchedules" asp-action="Update" asp-route-id="@schedule.Id">Güncelle</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="TeacherSchedules" asp-action="Delete" asp-route-id="@schedule.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
