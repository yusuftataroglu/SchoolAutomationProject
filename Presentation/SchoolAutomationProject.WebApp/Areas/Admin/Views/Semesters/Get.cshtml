@model List<ReadSemesterViewModel>
@{
    ViewData["Title"] = "Dönem Listesi";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header d-flex align-items-center">
        <i class="fas fa-table me-1 me-2"></i>
        <h3>Dönem Listesi</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Dönem Adı</th>
                    <th>Başlangıç Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th><a class="btn btn-success" asp-area="Admin" asp-controller="Semesters" asp-action="Add">+</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var semester in Model)
                {
                    <tr>
                        <td>@semester.Name</td>
                        <td>@semester.StartDate.ToShortDateString()</td>
                        <td>@semester.EndDate.ToShortDateString()</td>
                        <td class="d-flex">
                            <a class="btn btn-warning" asp-area="Admin" asp-controller="Semesters" asp-action="Details" asp-route-id="@semester.Id">Detaylar</a>
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Semesters" asp-action="Update" asp-route-id="@semester.Id">Güncelle</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Semesters" asp-action="Delete" asp-route-id="@semester.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
