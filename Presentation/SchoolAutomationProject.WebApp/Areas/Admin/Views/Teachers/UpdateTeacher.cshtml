@model WriteTeacherViewModel
@inject IMainCourseReadRepository _mainCourseReadRepository
@inject IClassroomReadRepository _classroomReadRepository
@{
    ViewData["Title"] = "UpdateTeacher";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}


<div class="card">
    <div class="card-header">Güncelle</div>
    <div class="card-body">
        <form method="post" asp-area="Admin" asp-controller="Teachers" asp-action="UpdateTeacher">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName">İsim</label>
                        <input asp-for="FirstName" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Soyisim</label>
                        <input asp-for="LastName" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Rol</label>
                        <input asp-for="Title" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <label>Verilen Dersler</label>
                    <div class="row">
                        <div class="col-md-auto">
                            <div class="form-group">
                                @foreach (var mainCourse in _mainCourseReadRepository.GetAll().ToList())
                                {
                                    <input id="@mainCourse.Id" name="selectedMainCourse" class="form-check-input" type="radio" value="@mainCourse.Id" @(Model.MainCourseId==mainCourse.Id.ToString()) ? "checked" : "") />
                                    <label for="@mainCourse.Id">@mainCourse.Name</label>
                                }
                            </div>
                        </div>
                    </div>

                   @*  <div class="row">
                        <div class="col-md-auto">
                            <label>Ders Verilen Sınıflar</label>
                            <div class="form-group">
                                @foreach (var classroom in _classroomReadRepository.GetAll().ToList())
                                {
                                    <input type="checkbox" id="@classroom.Id" class="form-check-input" value="@Model.ClassroomTeachers" @(Model.ClassroomTeachers.Select(x => x.Classroom.Id).Contains(classroom.Id) ? "checked" : "") />
                                    <label for="@classroom.Id">@classroom.Grade - @classroom.Section</label>
                                }
                            </div>
                        </div>
                    </div> *@
                    <button class ="btn btn-primary" type="submit">Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>